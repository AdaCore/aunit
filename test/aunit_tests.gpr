with "../aunit/aunit_build";
with "../support/aunit_shared";

project Aunit_Tests is

   for Languages use ("Ada");
   for Main use ("aunit_harness.adb");
   for Source_Dirs use ("src");
   for Exec_Dir use AUnit_Shared.Target & "-" & AUnit_Shared.Runtime;
   for Object_Dir use 
     "obj/" & AUnit_Shared.Target & "-" & AUnit_Shared.Runtime;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-g", "-gnatQ", "-O1", "-gnatf", "-gnato", "-gnatwa.Xe", "-gnaty");
   end Compiler;

   package Naming is
      for Implementation ("Test_Test_Case.Test_Exceptions")
         use "test_test_case-test_exceptions_with_exception.adb";
   end Naming;

end Aunit_Tests;

