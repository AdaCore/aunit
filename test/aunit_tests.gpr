with "../aunit/aunit_build";
with "support/support";

project Aunit_Tests is

   for Languages use ("Ada");
   for Main use ("aunit_harness.adb");
   for Source_Dirs use ("src");
   for Exec_Dir use ".";
   for Object_Dir use "obj";

   package Linker is
      case AUnit_Build.Target is
         when "powerpc-elf" =>
            for Default_Switches ("ada") use ("-g", "-Wl,-u,_start,-Ttext,0x100000");
         when others =>
            for Default_Switches ("ada") use ("-g");
      end case;
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-g", "-gnatQ", "-O1", "-gnatf", "-gnato", "-gnatwa.Xe", "-gnaty");
   end Compiler;

   package Naming is
      for Implementation ("Test_Test_Case.Test_Exceptions")
         use "test_test_case-test_exceptions_with_exception.adb";
   end Naming;

   package IDE renames AUnit_Build.IDE;

end Aunit_Tests;

