with "aunit";

project Aunit_Tests is

   for Languages use ("Ada");
   for Main use ("aunit_harness.adb");
   for Source_Dirs use ("src");
   for Exec_Dir use ".";
   for Object_Dir use "obj";

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Binder is
      for Default_Switches ("ada") use ("-E", "-static");
   end Binder;

   package Compiler is
      for Default_Switches ("ada") use ("-O1", "-gnatf", "-gnato", "-gnatwae", "-gnaty");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-g", "-gnatQ");
   end Builder;

   package Naming is
      for Implementation ("Test_Test_Case")
         use "test_test_case.adb";
      for Implementation ("Test_Test_Case.Test_Exceptions")
         use "test_test_case-test_exceptions_with_exception.adb";
   end Naming;

end Aunit_Tests;

