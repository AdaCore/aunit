project Zfp_Support is
   --  Support lib for ZFP with a native platform

   type Target_Type is ("native", "vxworks");
   Target : Target_Type := External ("TARGET", "native");

   for Languages use ("c", "ada");
   case Target is
      when "native" =>
         for Source_Dirs use ("src", "src/native");
      when "vxworks" =>
         for Source_Dirs use ("src", "src/vxworksae");
   end case;
   
   for Object_Dir use "obj";
   for Library_Dir use "lib";
   for Library_Name use "zfp_support";
   for Library_Kind use "static";

   package Builder is
      for Default_Switches ("ada") use
        ("-g", "-gnatQ", "--RTS=zfp");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use
        ("-O1", "-gnatf", "-gnato");
   end Compiler;

   package Linker is
      for Linker_Options use ("-lgnat", "-lzfp_support");
   end Linker;

end Zfp_Support;

