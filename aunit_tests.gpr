with "aunit";
with "environment";

project AUnit_Tests is

        for Languages use ("Ada");
        for Main use ("aunit_harness.adb");
        for Source_Dirs use ("test");
        for Exec_Dir use "./";

        for Object_Dir use "obj";

        package Binder is
                for Default_Switches ("ada") use ("-E", "-static");
        end Binder;

        package Builder renames Environment.Builder;
        package Compiler renames Environment.Compiler;
        package IDE renames Environment.IDE;

        package Linker is
           for Default_Switches ("ada") use ("-g");
        end Linker;

end AUnit_Tests;
